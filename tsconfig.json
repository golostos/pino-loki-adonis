{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
